<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutResultSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_success"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dim"/>
        <com.jaydee.confession.custom.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:text="@string/result_success_text"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layoutResultDelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/confession_logo"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dim"/>
        <com.jaydee.confession.custom.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:text="@string/result_delay_text"/>
    </RelativeLayout>

</RelativeLayout>
